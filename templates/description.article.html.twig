{% extends 'base.html.twig' %}
{% block body %}
	<header id="header" class="header-recherche">
		<div id="logo">

			<h1 class="site-title">PhoneHub</h1>

		</div>
		<nav id="site-navigation" class="main-navigation navigation" role="navigation">
			<button class="menu-toggle" aria-controls="site-navigation" aria-expanded="false">
				<span>Menu</span>
			</button>
			<div class="menu">
				<ul class="nav-menu">

					<li class="page_item page-item-1 current_page_item focus">
						<a href="/afficheRecherche" class="icon">
							<div>
								<p>
									Rechercher
								</p>
								<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512">
									<path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"></svg>
								</div>
							</a>
						</li>
					</li>
					<li class="page_item page-item-2">
						<a href="/accederAuPanier" class="icon">
							<div>
								<p>Panier</p>
								<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 576 512">
									<path d="M253.3 35.1c6.1-11.8 1.5-26.3-10.2-32.4s-26.3-1.5-32.4 10.2L117.6 192H32c-17.7 0-32 14.3-32 32s14.3 32 32 32L83.9 463.5C91 492 116.6 512 146 512H430c29.4 0 55-20 62.1-48.5L544 256c17.7 0 32-14.3 32-32s-14.3-32-32-32H458.4L365.3 12.9C359.2 1.2 344.7-3.4 332.9 2.7s-16.3 20.6-10.2 32.4L404.3 192H171.7L253.3 35.1zM192 304v96c0 8.8-7.2 16-16 16s-16-7.2-16-16V304c0-8.8 7.2-16 16-16s16 7.2 16 16zm96-16c8.8 0 16 7.2 16 16v96c0 8.8-7.2 16-16 16s-16-7.2-16-16V304c0-8.8 7.2-16 16-16zm128 16v96c0 8.8-7.2 16-16 16s-16-7.2-16-16V304c0-8.8 7.2-16 16-16s16 7.2 16 16z"></svg>
								</div>
							</a>
						</li>
					</li>
				</ul>
			</div>
		</nav>
	</header>
	<div id="content" class="site-content">
		<div class="col-full">
			<header class="entry-header">

				<h1 class="entry-title">Article</h1>
			</header>

			<!-- .entry-header -->
			<div class="entry-content">
				<div class="pageArticle">
					<div class="pageArticle1">
						<img src="{{ article.image }}" class="card-image" alt="poster_2_up"/>
					</div>
					<div class="pageArticle2">
						<p>{{ article.titre }}</p>
						<p>{{ article.prix }}</p>
					</div>

				</div>
				<div id="rating-stars">
					{% if article.id is defined and article.id in articleData|keys %}
						{% set maxRating = 5 %}
						{% if articleData[article.id].hasVoted == false %}
							<p>Évaluez cet article :</p>
							{% for i in 1..5 %}
								<form method="post" action="{{ path('evaluationArticle') }}">
									<input type="hidden" name="articleId" value="{{ article.id }}">
									<input type="hidden" name="rating" value="{{ i }}">
									<button type="submit">{{ i }}</button>
								</form>
							{% endfor %}
						{% else %}
							<p>Vous avez déjà évalué cet article. Votre évaluation : </p>
							{% set userRating = articleData[article.id].userRating %}
							{% for i in 1..maxRating %}
								{% if i <= userRating %}
									<i class="fas fa-star"></i>
								{% else %}
									<i class="far fa-plane"></i>
								{% endif %}
							{% endfor %}
						{% endif %}
					{% endif %}
				</div>

				<a href="/ajouterLigne?id={{ article.id }}" class="button product_type_simple add_to_cart_button rating-button">Mettre dans le panier</a>

				<input
				type="hidden" id="article-id" value="{{ article.id }}"/>
				<!-- Ajoutez un champ caché pour stocker l'ID de l'article -->

				<h1 class="entry-title">Panier</h1>
			</header>
			<!-- .entry-header -->
			<div class="entry-content">

				<div class="woocommerce panier">
					<div class="cart-collaterals">
						<div class="cross-sells"></div>
						<div class="cart_totals ">
							<h2>Total de la commande</h2>

							<table cellspacing="0">
								<tbody>
									<tr class="cart-subtotal">
										<th>Sous-total</th>
									</tr>
									<tr class="shipping">
										<th>Frais de port</th>
										<td>Gratuit</td>
									</tr>
									<tr class="order-total">
										<th>Total</th>
									</tr>
								</tbody>
							</strong>
						</td>
					</tr>
				</tbody>
			</table>
			<div class="wc-proceed-to-checkout">
				<a href="/commanderPanier" class="checkout-button button alt wc-forward">Effectuer la
																																																																											commande</a>
			</div>
		</div>
	</div>
</div></div></div><!-- .col-full --></div><!-- #content -->{% endblock %}{% block javascripts %}<script src="/js/main.js"/>{% endblock %}
